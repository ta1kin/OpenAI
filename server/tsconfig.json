{
  "compilerOptions": {
    "target": "ESNext",            // Современный JavaScript
    "module": "CommonJS",          // Используем CommonJS для Node.js
    "moduleResolution": "Node",    // Разрешение модулей по правилам Node.js
    "esModuleInterop": true,       // Включаем поддержку для ESM и CommonJS
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
